---
import Command from "@/icons/Command.astro";

interface Props {
    lang?: string;
}

const { lang = "es" } = Astro.props;
---

<header
    class="print:hidden pt-2 justify-self-center justify-between flex w-full pb-[6%] md:pb-[1%]"
>
    <div class="inline-flex items-center gap-4 font-extrabold py-2">
        <button
            class="inline-flex items-center gap-2 font-extrabold"
            id="print"
        >
            <Command />
            <span class="hidden md:inline-flex">Ctrl + P</span>
        </button>
        &lt;--
        <span class="font-light">
            {lang === "es" ? "¡Para formato pdf!" : "For print!"} 📝</span
        >
    </div>
    <a
        href={lang === "es" ? "/en" : "/"}
        title={lang === "es" ? "Español" : "English"}
        class="inline-flex items-center justify-center whitespace-nowrap rounded-md font-black transition-colors size-10 hover:bg-gray-200/80 hover:shadow-xl max-sm:size-8 bg-gray-200/50 text-gray-500 hover:border hover:border-gray-500"
    >
        {lang.toUpperCase()}
    </a>
</header>
