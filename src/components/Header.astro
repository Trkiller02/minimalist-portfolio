---
import { profile } from "@/db/data-en.json" with { type: "json" };
import { ICONS_ENUM_KEYPAD } from "@/icons/listIcons";
import { getRelativeLocaleUrl } from "astro:i18n";
import Command from "@/icons/Command.astro";

interface Props {
    lang?: string;
}

const { contact } = profile;

const contactInfo = contact.map(({ name, url, icon }) => {
    const Icon = ICONS_ENUM_KEYPAD[icon];
    const firstLetter = name[0].toUpperCase();

    return {
        id: name,
        section: "Social",
        title: name,
        url,
        icon: Icon,
        hotkey: `ctrl+${firstLetter}`,
    };
});

const { lang = "es" } = Astro.props;
---

<header
    class="print:hidden pt-2 max-md:pt-0 justify-self-center justify-between flex w-full pb-[3%] md:pb-[1%] items-center"
>
    <div
        class="inline-flex items-center gap-4 font-extrabold py-2"
        id="info-data"
        data-placeholder={lang === "es" ? "Buscar comando" : "Search command"}
        data-info={JSON.stringify(contactInfo)}
        data-lang={lang}
    >
        <button
            aria-label="Open the command palette"
            class="inline-flex items-center gap-2 font-semibold bg-gray-200 rounded-md px-4 py-2"
            id="command-palette"
        >
            <Command />
            <span class="hidden md:inline-flex"><kdb>Ctrl + P</kdb></span>
        </button>
        &lt;-
        <span class="font-light text-pretty max-md:text-sm">
            {
                lang === "es"
                    ? "Pulsa para abrir la paleta de comandos."
                    : "Press to open the command palette."
            }</span
        >
    </div>
    <a
        href={getRelativeLocaleUrl(lang === "es" ? "en" : "es")}
        title={lang === "es" ? "EspaÃ±ol" : "English"}
        class="inline-flex items-center justify-center whitespace-nowrap rounded-md font-black transition-colors size-10 hover:bg-gray-200/80 hover:shadow-xl max-sm:size-8 bg-gray-400/50 text-gray-700 hover:border hover:border-gray-500"
    >
        {lang.toUpperCase()}
    </a>
</header>

<ninja-keys
    placeholder={lang === "es" ? "Buscar comando" : "Search command"}
    hideBreadcrumbs
    class="print:hidden"
>
</ninja-keys>

<script>
    import { NinjaKeys } from "ninja-keys";

    interface Info {
        id: string;
        section: string;
        title: string;
        url: string;
        icon: string;
        hotkey: string;
        handler?: () => void;
    }
    const info =
        document.getElementById("info-data")?.getAttribute("data-info") ?? "[]";
    ("[]");

    const lang = document
        .getElementById("info-data")
        ?.getAttribute("data-lang");

    const parsedInfo = JSON.parse(info) as Info[];

    const ninja = document.querySelector("ninja-keys")!;

    const data = parsedInfo.map(({ url, hotkey, icon, id, section, title }) => {
        return {
            id,
            title,
            icon,
            hotkey,
            section,
            handler: () => {
                window.open(url, "_blank");
            },
        };
    });

    ninja.data = [
        {
            id: "print",
            title: lang === "es" ? "Imprimir" : "Print",
            icon: `<svg style="margin-right: 8px" width="16" height="16" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
  <path stroke-linecap="round" stroke-linejoin="round" d="M6.72 13.829c-.24.03-.48.062-.72.096m.72-.096a42.415 42.415 0 0 1 10.56 0m-10.56 0L6.34 18m10.94-4.171c.24.03.48.062.72.096m-.72-.096L17.66 18m0 0 .229 2.523a1.125 1.125 0 0 1-1.12 1.227H7.231c-.662 0-1.18-.568-1.12-1.227L6.34 18m11.318 0h1.091A2.25 2.25 0 0 0 21 15.75V9.456c0-1.081-.768-2.015-1.837-2.175a48.055 48.055 0 0 0-1.913-.247M6.34 18H5.25A2.25 2.25 0 0 1 3 15.75V9.456c0-1.081.768-2.015 1.837-2.175a48.041 48.041 0 0 1 1.913-.247m10.5 0a48.536 48.536 0 0 0-10.5 0m10.5 0V3.375c0-.621-.504-1.125-1.125-1.125h-8.25c-.621 0-1.125.504-1.125 1.125v3.659M18 10.5h.008v.008H18V10.5Zm-3 0h.008v.008H15V10.5Z" />
</svg>`,
            hotkey: "ctrl+P",
            section: lang === "es" ? "Acciones" : "Actions",
            handler: () => {
                window.print();
            },
        },
        ...data,
    ];

    const footerButton = document.getElementById("command-palette");
    footerButton?.addEventListener("click", () => {
        var event = new KeyboardEvent("keydown", {
            key: "K",
            code: "KeyK",
            keyCode: 75,
            which: 75,
            ctrlKey: true,
            altKey: false,
            shiftKey: false,
            metaKey: false,
        });

        document.dispatchEvent(event);
    });
</script>
