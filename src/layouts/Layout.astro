---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Omar Marquez Portfolio" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="/minimalist-portfolio/global.css" />
    <title>{title}</title>
  </head>
  <body>
    <main
      class="w-3/4 print:w-11/12 max-w-[1024px] flex flex-col px-[5%] py-[5%] antialiased max-sm:w-full pb-20"
    >
      <slot />
    </main>
  </body>
</html>
