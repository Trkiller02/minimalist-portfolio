---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Omar Marquez Portfolio" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <main
      class="w-3/4 max-w-[1024px] flex flex-col px-[5%] py-[5%] antialiased max-sm:w-full"
    >
      <slot />
    </main>
  </body>
</html>

<style is:global>
  :root {
    color-scheme: light;
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html,
  body {
    width: 100%;
    height: 100vh;
  }

  body {
    display: flex;
    justify-content: center;
  }
</style>
