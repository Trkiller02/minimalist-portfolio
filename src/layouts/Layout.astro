---
import Command from "@/icons/Command.astro";

interface Props {
  title: string;
  lang?: string;
}

const { title, lang = "es" } = Astro.props;

import "./global.css";
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Omar Marquez Portfolio" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      type="image/svg+xml"
      href="minimalist-portfolio-astro/favicon.svg"
    />
    <title>{title}</title>
  </head>
  <body>
    <main
      class="w-3/4 print:w-11/12 max-w-[1024px] flex flex-col antialiased max-sm:w-full pb-20 px-[5%]"
    >
      <header
        class="print:hidden pt-2 justify-self-center justify-between flex w-full pb-[6%] md:pb-[1%]"
      >
        <div class="inline-flex items-center gap-4 font-extrabold py-2">
          <button
            class="inline-flex items-center gap-2 font-extrabold"
            id="print"
          >
            <Command />
            Ctrl + P
          </button>
          &lt;--
          <span class="font-light">
            {lang === "es" ? "¬°Para formato pdf!" : "For print!"} üìù</span
          >
        </div>
        <a
          href={`/minimalist-portfolio${lang === "es" ? "/en" : ""}`}
          title={lang === "es" ? "Espa√±ol" : "English"}
          class="inline-flex items-center justify-center whitespace-nowrap rounded-md font-black transition-colors size-10 hover:bg-gray-200/80 hover:shadow-xl max-sm:size-8 bg-gray-200/50 text-gray-500 hover:border hover:border-gray-500"
        >
          {lang.toUpperCase()}
        </a>
      </header>
      <slot />
    </main>
  </body>
</html>

<script>
  document
    .getElementById("print")
    ?.addEventListener("click", () => window.print());
</script>
